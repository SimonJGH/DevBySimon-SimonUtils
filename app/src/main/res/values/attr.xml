<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--slidingmenu-->
    <attr name="rightPadding" format="dimension"></attr>
    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding"></attr>
    </declare-styleable>

    <!--gif-->
    <declare-styleable name="GifViews">
        <attr name="src" format="reference" />
    </declare-styleable>

    <!--roundimage-->
    <declare-styleable name="RoundImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--precentLayout-->
    <declare-styleable name="percent_layout">
        <attr name="percent_width" format="float"/>
        <attr name="percent_height" format="float"/>
    </declare-styleable>

    <!--recyclerview-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="leftViewId" format="reference" />
        <attr name="rightViewId" format="reference" />
        <attr name="contentViewId" format="reference" />
    </declare-styleable>

    <!--RippleDiffusiionView-->
    <declare-styleable name="RippleDiffusiionView">
        <!--圆颜色-->
        <attr name="wave_color" format="color"/>
        <!--中心圆图片半径-->
        <attr name="wave_coreImageRadius" format="integer"/>
        <!--波浪圆之间间距,值越小越窄-->
        <attr name="wave_width" format="integer"/>
    </declare-styleable>

    <!--OvalProgressView-->
    <declare-styleable name="OvalProgressView">
        <attr name="ovalColor" format="color" />
        <attr name="fixTextColor" format="color" />
        <attr name="progressTextColor" format="color" />
        <attr name="ovalWidth" format="dimension" />
        <attr name="progressText" format="string" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="fixText" format="string" />
        <attr name="fixTextSize" format="dimension" />
    </declare-styleable>

    <!--MarqueeViewStyle-->
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <!--
            Reference引用类型
            <attr name="drawable" format="reference"/>
            Color色值类型
            <attr name="cacheColorHint" format="color"/>
            Dimension测量类型
            <attr name="layout_width" format="dimension"/>
            Fraction百分比类型
            <attr name="fromX" format="fraction"/>
            String字符串类型
            <attr name="text" format="string"/>
            Boolean布尔类型
            <attr name="clickable" format="boolean"/>
            Integer整型类型
            <attr name="lines" format="integer"/>
            Float浮点类型
            <attr name="textScaleX" format="float"/>
            Enum枚举类型
            <attr name="orientation">
                <enum name="horizontal" value="0"/>
                <enum name="vertical" value="1"/>
            </attr>
            Flag类型
            <attr name="gravity">
                <flag name="top" value="0x30"/>
                <flag name="left" value="0x03"/>
            </attr>

            -->
</resources>
